{
  "name": "@exivity/actions",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:exivity/actions.git",
  "author": "Joram van den Boezem <joram@vandenboezem.nl>",
  "license": "MIT",
  "scripts": {
    "build": "run-p --aggregate-output build:**",
    "build:init-ssh": "ncc build init-ssh/src/index.ts -o init-ssh/dist",
    "build:rabbitmq": "ncc build rabbitmq/src/index.ts -o rabbitmq/dist",
    "wip:db": "ncc build db/src/index.ts -o db/dist",
    "wip:get-artefacts": "ncc build get-artefacts/src/index.ts -o get-artefacts/dist",
    "wip:put-artefacts": "ncc build put-artefacts/src/index.ts -o put-artefacts/dist",
    "wip:accept": "ncc build accept/src/index.ts -o accept/dist"
  },
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@actions/exec": "^1.0.4"
  },
  "devDependencies": {
    "@types/node": "^14.0.27",
    "@zeit/ncc": "^0.22.3",
    "husky": "^4.2.5",
    "npm-run-all": "^4.1.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn build && git add ."
    }
  }
}
